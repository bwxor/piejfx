{
  "extensions": [".rb"],
  "rules": {
    "leading_spaces": { "type": "indent", "regex": "^\\s+" },
    "keywords": { "type": "keyword", "regex": "\\b(alias|and|begin|break|case|class|def|defined\\?|do|else|elsif|end|ensure|for|if|in|module|next|nil|not|or|redo|rescue|retry|return|self|super|then|true|false|undef|unless|until|when|while|yield)\\b" },
    "strings": { "type": "string", "regex": "\"(\\\\.|[^\"\\\\])*\"|'(\\\\.|[^'\\\\])*'" },
    "comments": { "type": "comment", "regex": "#.*" }
  }
}
