{
  "extensions": [".cob", ".cbl", ".cpy", ".cobol"],
  "rules": [
    {
      "type": "indent",
      "regex": "^\\s+"
    },
    {
      "type": "comment",
      "regex": "^.{6}\\*.*"
    },
    {
      "type": "comment",
      "regex": "\\*>.*"
    },
    {
      "type": "string",
      "regex": "'([^']|'')*'|\"([^\"]|\"\")*\""
    },
    {
      "type": "division",
      "regex": "\\b(IDENTIFICATION|ENVIRONMENT|DATA|PROCEDURE)\\s+DIVISION\\b"
    },
    {
      "type": "section",
      "regex": "\\b[A-Za-z0-9-]+\\s+SECTION\\b"
    },
    {
      "type": "keyword",
      "regex": "\\b(ACCEPT|ADD|CALL|CANCEL|CLOSE|COMPUTE|CONTINUE|DELETE|DISPLAY|DIVIDE|ELSE|END-IF|END-PERFORM|END-READ|END-WRITE|EVALUATE|EXIT|GOBACK|GO|IF|INITIALIZE|INSPECT|MERGE|MOVE|MULTIPLY|OPEN|PERFORM|READ|RETURN|REWRITE|SEARCH|SET|SORT|START|STOP|STRING|SUBTRACT|UNSTRING|WRITE)\\b"
    },
    {
      "type": "type",
      "regex": "\\b(PIC|PICTURE|USAGE|COMP|COMP-1|COMP-2|COMP-3|COMP-4|COMP-5|BINARY|DISPLAY)\\b"
    },
    {
      "type": "number",
      "regex": "\\b[+-]?\\d+(\\.\\d+)?\\b"
    },
    {
      "type": "operator",
      "regex": "\\b(EQUAL|NOT|AND|OR|LESS|GREATER|THAN)\\b|[=<>\\+\\-*/]"
    },
    {
      "type": "punctuation",
      "regex": "[(),.;:]"
    },
    {
      "type": "level",
      "regex": "^\\s*(01|02|03|04|05|07|10|15|20|30|40|50|66|77|88)\\b"
    },
    {
      "type": "function",
      "regex": "^\\s*[A-Za-z][A-Za-z0-9-]*\\."
    },
    {
      "type": "identifier",
      "regex": "\\b[A-Za-z][A-Za-z0-9-]*\\b"
    }
  ],
  "autocomplete": ["IDENTIFICATION","ENVIRONMENT","DATA","PROCEDURE","ACCEPT","ADD","CALL","CANCEL","CLOSE","COMPUTE","CONTINUE","DELETE","DISPLAY","DIVIDE","ELSE","END-IF","END-PERFORM","END-READ","END-WRITE","EVALUATE","EXIT","GOBACK","GO","IF","INITIALIZE","INSPECT","MERGE","MOVE","MULTIPLY","OPEN","PERFORM","READ","RETURN","REWRITE","SEARCH","SET","SORT","START","STOP","STRING","SUBTRACT","UNSTRING","WRITE","PIC","PICTURE","USAGE","COMP","COMP-1","COMP-2","COMP-3","COMP-4","COMP-5","BINARY","EQUAL","NOT","AND","OR","LESS","GREATER","THAN"]
}
