{
  "extensions": [".bas", ".vb"],
  "rules": [
    {
      "type": "indent",
      "regex": "^\\s+"
    },
    {
      "type": "comment",
      "regex": "' .*|REM .*"
    },
    {
      "type": "string",
      "regex": "\"[^\"]*\""
    },
    {
      "type": "keyword",
      "regex": "\\b(DIM|REDIM|AS|IF|THEN|ELSE|ELSEIF|END|FOR|TO|STEP|NEXT|WHILE|WEND|DO|LOOP|UNTIL|SELECT|CASE|FUNCTION|SUB|RETURN|EXIT|PUBLIC|PRIVATE|GLOBAL|CONST|ON|ERROR|GOTO|GOSUB|OPTION|EXPLICIT|MODULE|IMPORTS)\\b"
    },
    {
      "type": "type",
      "regex": "\\b(INTEGER|LONG|SINGLE|DOUBLE|STRING|BOOLEAN|VARIANT|OBJECT|BYTE|DATE)\\b"
    },
    {
      "type": "function",
      "regex": "\\b(FUNCTION|SUB)\\s+[A-Za-z_][A-Za-z0-9_]*"
    },
    {
      "type": "number",
      "regex": "\\b\\d+(\\.\\d+)?\\b"
    },
    {
      "type": "operator",
      "regex": "\\+|\\-|\\*|/|=|<>|<=|>=|<|>|\\^|&"
    },
    {
      "type": "punctuation",
      "regex": "[()\\[\\],:]"
    },
    {
      "type": "identifier",
      "regex": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
    }
  ],
  "autocomplete": ["DIM","REDIM","AS","IF","THEN","ELSE","ELSEIF","END","FOR","TO","STEP","NEXT","WHILE","WEND","DO","LOOP","UNTIL","SELECT","CASE","FUNCTION","SUB","RETURN","EXIT","PUBLIC","PRIVATE","GLOBAL","CONST","ON","ERROR","GOTO","GOSUB","OPTION","EXPLICIT","MODULE","IMPORTS","INTEGER","LONG","SINGLE","DOUBLE","STRING","BOOLEAN","VARIANT","OBJECT","BYTE","DATE"]
}
