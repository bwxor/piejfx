{
  "extensions": [".f", ".f90", ".f95"],
  "rules": {
    "leading_spaces": { "type": "indent", "regex": "^\\s+" },
    "keywords": {
      "type": "keyword",
      "regex": "\\b(program|end|if|then|else|do|while|select|case|module|use|implicit|none|contains|subroutine|function|return|stop)\\b"
    },
    "strings": { "type": "string", "regex": "'([^']|'')*'" },
    "comments": { "type": "comment", "regex": "!.*" },
    "numbers": { "type": "number", "regex": "\\b\\d+(\\.\\d+)?\\b" },
    "operators": { "type": "operator", "regex": "\\.eq\\.|\\.ne\\.|\\.lt\\.|\\.gt\\.|\\.le\\.|\\.ge\\.|[-+*/=]" },
    "punctuation": { "type": "punctuation", "regex": "[(),:]" }
  }
}
