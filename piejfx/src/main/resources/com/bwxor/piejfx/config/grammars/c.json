{
  "extensions": [".c", ".h"],
  "rules": [
    {
      "type": "comment",
      "regex": "/\\*[\\s\\S]*?\\*/"
    },
    {
      "type": "comment",
      "regex": "//.*"
    },
    {
      "type": "string",
      "regex": "\"(\\\\.|[^\"\\\\])*\""
    },
    {
      "type": "char",
      "regex": "'(\\\\.|[^'\\\\])'"
    },
    {
      "type": "preprocessor",
      "regex": "^\\s*#\\s*(include|define|undef|if|ifdef|ifndef|elif|else|endif|error|pragma)\\b.*"
    },
    {
      "type": "keyword",
      "regex": "\\b(auto|break|case|char|const|continue|default|do|double|else|enum|extern|float|for|goto|if|inline|int|long|register|restrict|return|short|signed|sizeof|static|struct|switch|typedef|union|unsigned|void|volatile|while)\\b"
    },
    {
      "type": "type",
      "regex": "\\b(int|char|float|double|void|short|long|signed|unsigned|struct|union|enum)\\b"
    },
    {
      "type": "function",
      "regex": "\\b[A-Za-z_][A-Za-z0-9_]*\\s*(?=\\()"
    },
    {
      "type": "number",
      "regex": "\\b(0x[0-9a-fA-F]+|\\d+\\.\\d+|\\d+)\\b"
    },
    {
      "type": "operator",
      "regex": "\\+\\+|--|==|!=|<=|>=|&&|\\|\\||<<|>>|[-+*/%=&|^~<>!]"
    },
    {
      "type": "punctuation",
      "regex": "[{}()\\[\\];,]"
    },
    {
      "type": "identifier",
      "regex": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
    }
  ],
  "autocomplete": ["include","define","undef","if","ifdef","ifndef","elif","else","endif","error","pragma","auto","break","case","char","const","continue","default","do","double","enum","extern","float","for","goto","inline","int","long","register","restrict","return","short","signed","sizeof","static","struct","switch","typedef","union","unsigned","void","volatile","while"]
}
