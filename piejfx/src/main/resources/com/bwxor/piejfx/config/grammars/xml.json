{
  "extensions": [".xml"],
  "rules": [
    {
      "type": "comment",
      "regex": "<!--[\\s\\S]*?-->"
    },
    {
      "type": "comment",
      "regex": "<![\\s\\S]*?>"
    },
    {
      "type": "string",
      "regex": "\"[^\"]*\"|'[^']*'"
    },
    {
      "type": "tag",
      "regex": "</?[A-Za-z][A-Za-z0-9-]*"
    },
    {
      "type": "tag",
      "regex": "/?>"
    },
    {
      "type": "attribute",
      "regex": "\\b[A-Za-z-]+(?=\\s*=)"
    },
    {
      "type": "operator",
      "regex": "="
    },
    {
      "type": "punctuation",
      "regex": "[<>]"
    },
    {
      "type": "identifier",
      "regex": "[A-Za-z0-9-]+"
    }
  ]
}
