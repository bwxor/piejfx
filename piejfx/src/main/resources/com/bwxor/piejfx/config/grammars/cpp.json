{
  "extensions": [".cpp", ".cc", ".cxx", ".hpp", ".h"],
  "rules": [
    {
      "type": "comment",
      "regex": "//.*|/\\*[\\s\\S]*?\\*/"
    },
    {
      "type": "string",
      "regex": "\"(\\\\.|[^\"\\\\])*\""
    },
    {
      "type": "preprocessor",
      "regex": "^\\s*#\\s*(include|define|undef|ifdef|ifndef|if|else|elif|endif|pragma|error|warning|line)\\b.*"
    },
    {
      "type": "number",
      "regex": "\\b(0x[0-9a-fA-F]+|\\d+\\.\\d+|\\d+)\\b"
    },
    {
      "type": "keyword",
      "regex": "\\b(alignas|auto|bool|break|case|catch|class|const|constexpr|continue|delete|do|double|else|enum|explicit|export|extern|false|float|for|friend|goto|if|inline|int|long|mutable|namespace|new|nullptr|operator|private|protected|public|return|short|signed|sizeof|static|struct|switch|template|this|throw|true|try|typedef|typename|union|unsigned|using|virtual|void|volatile|while)\\b"
    },
    {
      "type": "operator",
      "regex": "==|!=|<=|>=|&&|\\|\\||::|->|[-+*/%=&|^~<>!]"
    },
    {
      "type": "punctuation",
      "regex": "[{}()\\[\\];,\\.:]"
    },
    {
      "type": "indent",
      "regex": "^\\s+"
    },
    {
      "type": "function",
      "regex": "\\b[A-Za-z_][A-Za-z0-9_]*\\s*(?=\\()"
    },
    {
      "type": "identifier",
      "regex": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
    }
  ]
}