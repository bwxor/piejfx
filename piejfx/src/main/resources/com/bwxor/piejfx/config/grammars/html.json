{
  "extensions": [".html", ".htm"],
  "rules": {
    "tags": { "type": "tag", "regex": "</?[A-Za-z][A-Za-z0-9-]*" },
    "attributes": { "type": "attribute", "regex": "\\b[A-Za-z-]+(?==)" },
    "strings": { "type": "string", "regex": "\"[^\"]*\"" },
    "comments": { "type": "comment", "regex": "<!--[\\s\\S]*?-->" }
  }
}
