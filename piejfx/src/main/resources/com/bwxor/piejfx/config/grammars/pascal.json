{
  "extensions": [".pas", ".p"],
  "rules": {
    "leading_spaces": { "type": "indent", "regex": "^\\s+" },
    "keywords": {
      "type": "keyword",
      "regex": "\\b(begin|end|if|then|else|while|do|for|to|downto|repeat|until|case|of|procedure|function|var|type|const|record|array|set|file|program|with)\\b"
    },
    "strings": { "type": "string", "regex": "'([^']|'')*'" },
    "comments": { "type": "comment", "regex": "\\{[\\s\\S]*?\\}|\\(\\*[\\s\\S]*?\\*\\)" },
    "numbers": { "type": "number", "regex": "\\b\\d+(\\.\\d+)?\\b" },
    "operators": { "type": "operator", "regex": ":=|=|<>|<=|>=|[-+*/]" },
    "punctuation": { "type": "punctuation", "regex": "[()\\[\\];,\\.]" }
  }
}
