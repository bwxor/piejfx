{
  "extensions": [
    ".pas",
    ".p"
  ],
  "rules": [
    {
      "type": "comment",
      "regex": "\\{[\\s\\S]*?\\}|\\(\\*[\\s\\S]*?\\*\\)"
    },
    {
      "type": "string",
      "regex": "'([^']|'')*'"
    },
    {
      "type": "number",
      "regex": "\\b\\d+(\\.\\d+)?\\b"
    },
    {
      "type": "keyword",
      "regex": "\\b(begin|end|if|then|else|while|do|for|to|downto|repeat|until|case|of|procedure|function|var|type|const|record|array|set|file|program|with)\\b"
    },
    {
      "type": "operator",
      "regex": ":=|=|<>|<=|>=|[-+*/]"
    },
    {
      "type": "punctuation",
      "regex": "[()\\[\\];,\\.]"
    },
    {
      "type": "indent",
      "regex": "^\\s+"
    },
    {
      "type": "identifier",
      "regex": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
    }
  ]
}