{
  "extensions": [".py"],
  "rules": {
    "leading_spaces": {
      "type": "indent",
      "regex": "^\\s+"
    },
    "keywords": {
      "type": "keyword",
      "regex": "\\b(False|None|True|and|as|assert|break|class|continue|def|del|elif|else|except|finally|for|from|global|if|import|in|is|lambda|nonlocal|not|or|pass|raise|required|return|try|while|with|yield)\\b"
    },
    "types": {
      "type": "type",
      "regex": "\\b(int|float|str|bool|list|dict|set|tuple|object)\\b"
    },
    "strings": {
      "type": "string",
      "regex": "\"(\\\\.|[^\"\\\\])*\"|'(\\\\.|[^'\\\\])*'"
    },
    "triple_strings": {
      "type": "string",
      "regex": "\"\"\"[\\s\\S]*?\"\"\"|'''[\\s\\S]*?'''"
    },
    "single_line_comment": {
      "type": "comment",
      "regex": "#.*"
    },
    "numbers": {
      "type": "number",
      "regex": "\\b(0x[0-9a-fA-F]+|\\d+\\.\\d+|\\d+)\\b"
    },
    "decorators": {
      "type": "decorator",
      "regex": "@[A-Za-z_][A-Za-z0-9_]*"
    },
    "operators": {
      "type": "operator",
      "regex": "\\+\\+|--|==|!=|<=|>=|\\*\\*|//|<<|>>|[-+*/%=&|^~<>!]"
    },
    "punctuation": {
      "type": "punctuation",
      "regex": "[{}()\\[\\];,\\.:]"
    },
    "block_start": {
      "type": "block",
      "regex": ":\\s*$"
    },
    "function": {
      "type": "function",
      "regex": "\\bdef\\s+[A-Za-z_][A-Za-z0-9_]*"
    },
    "class_name": {
      "type": "class",
      "regex": "\\bclass\\s+[A-Za-z_][A-Za-z0-9_]*"
    },
    "identifiers": {
      "type": "identifier",
      "regex": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
    }
  }
}
