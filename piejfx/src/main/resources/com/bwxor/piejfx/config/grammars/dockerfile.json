{
  "extensions": [
    "Dockerfile"
  ],
  "rules": [
    {
      "type": "comment",
      "regex": "#.*"
    },
    {
      "type": "string",
      "regex": "\"[^\"]*\"|'[^']*'"
    },
    {
      "type": "keyword",
      "regex": "\\b(FROM|RUN|CMD|LABEL|MAINTAINER|EXPOSE|ENV|ADD|COPY|ENTRYPOINT|VOLUME|USER|WORKDIR|ARG|ONBUILD|STOPSIGNAL|HEALTHCHECK|SHELL)\\b"
    },
    {
      "type": "variable",
      "regex": "\\$[A-Za-z0-9_]+|\\$\\{[A-Za-z0-9_]+\\}"
    },
    {
      "type": "identifier",
      "regex": "[A-Za-z0-9_\\/\\.-]+"
    }
  ],
  "autocomplete": ["FROM","RUN","CMD","LABEL","MAINTAINER","EXPOSE","ENV","ADD","COPY","ENTRYPOINT","VOLUME","USER","WORKDIR","ARG","ONBUILD","STOPSIGNAL","HEALTHCHECK","SHELL"]
}