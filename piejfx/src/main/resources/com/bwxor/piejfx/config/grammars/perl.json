{
  "extensions": [
    ".pl",
    ".pm"
  ],
  "rules": [
    {
      "type": "comment",
      "regex": "#.*"
    },
    {
      "type": "string",
      "regex": "\"(\\\\.|[^\"\\\\])*\"|'(\\\\.|[^'\\\\])*'"
    },
    {
      "type": "number",
      "regex": "\\b(0x[0-9a-fA-F]+|\\d+\\.\\d+|\\d+)\\b"
    },
    {
      "type": "type",
      "regex": "\\b(scalar|array|hash|code|glob|ref)\\b"
    },
    {
      "type": "keyword",
      "regex": "\\b(my|our|use|require|package|sub|if|elsif|else|unless|while|until|for|foreach|given|when|default|continue|last|next|redo|goto|return|eval|die|warn)\\b"
    },
    {
      "type": "function",
      "regex": "(?<=\\bsub\\s+)[A-Za-z_][A-Za-z0-9_]*"
    },
    {
      "type": "variable",
      "regex": "[\\$@%][A-Za-z_][A-Za-z0-9_]*"
    },
    {
      "type": "operator",
      "regex": "==|!=|<=|>=|=>|=~|!~|\\+|\\-|\\*|/|%|=|\\.|x|\\*\\*|&&|\\|\\|"
    },
    {
      "type": "punctuation",
      "regex": "[{}()\\[\\];,]"
    },
    {
      "type": "indent",
      "regex": "^\\s+"
    },
    {
      "type": "identifier",
      "regex": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
    }
  ],
  "autocomplete": ["scalar","array","hash","code","glob","ref","my","our","use","require","package","sub","if","elsif","else","unless","while","until","for","foreach","given","when","default","continue","last","next","redo","goto","return","eval","die","warn"]
}