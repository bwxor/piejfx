{
  "extensions": [".pl", ".pm"],
  "rules": {
    "leading_spaces": {
      "type": "indent",
      "regex": "^\\s+"
    },
    "keywords": {
      "type": "keyword",
      "regex": "\\b(my|our|use|require|package|sub|if|elsif|else|unless|while|until|for|foreach|given|when|default|continue|last|next|redo|goto|return|eval|die|warn)\\b"
    },
    "types": {
      "type": "type",
      "regex": "\\b(scalar|array|hash|code|glob|ref)\\b"
    },
    "strings": {
      "type": "string",
      "regex": "\"(\\\\.|[^\"\\\\])*\"|'(\\\\.|[^'\\\\])*'"
    },
    "single_line_comment": {
      "type": "comment",
      "regex": "#.*"
    },
    "numbers": {
      "type": "number",
      "regex": "\\b(0x[0-9a-fA-F]+|\\d+\\.\\d+|\\d+)\\b"
    },
    "variables": {
      "type": "variable",
      "regex": "[\\$@%][A-Za-z_][A-Za-z0-9_]*"
    },
    "operators": {
      "type": "operator",
      "regex": "==|!=|<=|>=|<=|>=|=>|=~|!~|\\+|\\-|\\*|/|%|=|\\.|x|\\*\\*|&&|\\|\\|"
    },
    "punctuation": {
      "type": "punctuation",
      "regex": "[{}()\\[\\];,]"
    },
    "function": {
      "type": "function",
      "regex": "\\bsub\\s+[A-Za-z_][A-Za-z0-9_]*"
    },
    "identifiers": {
      "type": "identifier",
      "regex": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
    }
  }
}
