{
  "extensions": [".ps1"],
  "rules": {
    "leading_spaces": { "type": "indent", "regex": "^\\s+" },
    "keywords": { "type": "keyword", "regex": "\\b(param|function|filter|workflow|if|else|elseif|switch|for|foreach|while|do|until|break|continue|return|try|catch|finally|throw)\\b" },
    "variables": { "type": "variable", "regex": "\\$[A-Za-z_][A-Za-z0-9_]*" },
    "comments": { "type": "comment", "regex": "#.*" }
  }
}
