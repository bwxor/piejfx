{
  "extensions": [
    ".r"
  ],
  "rules": [
    {
      "type": "comment",
      "regex": "#.*"
    },
    {
      "type": "string",
      "regex": "\"[^\"]*\"|'[^']*'"
    },
    {
      "type": "number",
      "regex": "\\b\\d+(\\.\\d+)?\\b"
    },
    {
      "type": "keyword",
      "regex": "\\b(if|else|repeat|while|function|for|in|next|break|TRUE|FALSE|NULL|NA|NaN|Inf)\\b"
    },
    {
      "type": "operator",
      "regex": "==|!=|<=|>=|<-|->|\\|\\||&&|[-+*/%=&|^~<>!]"
    },
    {
      "type": "punctuation",
      "regex": "[{}()\\[\\];,\\$@:]"
    },
    {
      "type": "indent",
      "regex": "^\\s+"
    },
    {
      "type": "function",
      "regex": "\\b[A-Za-z_][A-Za-z0-9_.]*\\s*(?=\\()"
    },
    {
      "type": "identifier",
      "regex": "\\b[A-Za-z_][A-Za-z0-9_.]*\\b"
    }
  ],
  "autocomplete": ["if","else","repeat","while","function","for","in","next","break","TRUE","FALSE","NULL","NA","NaN","Inf"]
}