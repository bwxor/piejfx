{
  "extensions": [".r"],
  "rules": {
    "leading_spaces": { "type": "indent", "regex": "^\\s+" },
    "keywords": { "type": "keyword", "regex": "\\b(if|else|repeat|while|function|for|in|next|break|TRUE|FALSE|NULL|NA|NaN|Inf)\\b" },
    "strings": { "type": "string", "regex": "\"[^\"]*\"|'[^']*'" },
    "comments": { "type": "comment", "regex": "#.*" }
  }
}
