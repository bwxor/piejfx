{
  "extensions": [".lua"],
  "rules": {
    "leading_spaces": { "type": "indent", "regex": "^\\s+" },
    "keywords": {
      "type": "keyword",
      "regex": "\\b(and|break|do|else|elseif|end|false|for|function|if|in|local|nil|not|or|repeat|return|then|true|until|while)\\b"
    },
    "strings": { "type": "string", "regex": "'(\\\\.|[^'\\\\])*'|\"(\\\\.|[^\"\\\\])*\"" },
    "comments": { "type": "comment", "regex": "--.*|--\\[\\[[\\s\\S]*?\\]\\]" },
    "numbers": { "type": "number", "regex": "\\b\\d+(\\.\\d+)?\\b" },
    "operators": { "type": "operator", "regex": "==|~=|<=|>=|\\.\\.|[-+*/%=&|^#<>]" },
    "punctuation": { "type": "punctuation", "regex": "[{}()\\[\\];,\\.]" },
    "function": { "type": "function", "regex": "\\bfunction\\s+[A-Za-z_][A-Za-z0-9_]*" }
  }
}
