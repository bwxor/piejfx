{
  "extensions": [
    ".lua"
  ],
  "rules": [
    {
      "type": "comment",
      "regex": "--.*|--\\[\\[[\\s\\S]*?\\]\\]"
    },
    {
      "type": "string",
      "regex": "'(\\\\.|[^'\\\\])*'|\"(\\\\.|[^\"\\\\])*\"|\\[\\[[\\s\\S]*?\\]\\]"
    },
    {
      "type": "number",
      "regex": "\\b\\d+(\\.\\d+)?\\b"
    },
    {
      "type": "keyword",
      "regex": "\\b(and|break|do|else|elseif|end|false|for|function|if|in|local|nil|not|or|repeat|return|then|true|until|while)\\b"
    },
    {
      "type": "function",
      "regex": "(?<=\\bfunction\\s+)[A-Za-z_][A-Za-z0-9_]*"
    },
    {
      "type": "operator",
      "regex": "==|~=|<=|>=|\\.\\.|[-+*/%=&|^#<>]"
    },
    {
      "type": "punctuation",
      "regex": "[{}()\\[\\];,\\.]"
    },
    {
      "type": "indent",
      "regex": "^\\s+"
    },
    {
      "type": "identifier",
      "regex": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
    }
  ]
}