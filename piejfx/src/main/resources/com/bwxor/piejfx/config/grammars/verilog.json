{
  "extensions": [".v"],
  "rules": {
    "leading_spaces": { "type": "indent", "regex": "^\\s+" },
    "keywords": { "type": "keyword", "regex": "\\b(module|endmodule|input|output|wire|reg|always|assign|if|else|case|endcase|for|while|begin|end)\\b" },
    "comments": { "type": "comment", "regex": "//.*|/\\*[\\s\\S]*?\\*/" }
  }
}
