{
  "extensions": [".java"],
  "rules": {
    "comments": {
      "type": "comment",
      "regex": "//.*|/\\*[\\s\\S]*?\\*\\/"
    },
    "strings": {
      "type": "string",
      "regex": "\"([^\"\\\\]|\\\\.)*\""
    },
    "character": {
      "type": "char",
      "regex": "'([^'\\\\]|\\\\.)'"
    },
    "annotations": {
      "type": "annotation",
      "regex": "@[A-Za-z_][A-Za-z0-9_]*"
    },
    "keywords": {
      "type": "keyword",
      "regex": "\\b(abstract|assert|boolean|break|byte|case|catch|char|class|const|continue|default|do|double|else|enum|extends|final|finally|float|for|goto|if|implements|import|instanceof|int|interface|long|native|new|package|private|protected|public|return|short|static|strictfp|super|switch|synchronized|this|throw|throws|transient|try|void|volatile|while|String|Object)\\b"
    },
    "numbers": {
      "type": "number",
      "regex": "\\b(0x[0-9a-fA-F]+|\\d+\\.\\d+[fFdD]?|\\d+[lLfFdD]?)\\b"
    },
    "operators": {
      "type": "operator",
      "regex": "\\+\\+|--|==|!=|<=|>=|&&|\\|\\||<<|>>>|>>|[-+*/%=&|^~<>!]"
    },
    "punctuation": {
      "type": "punctuation",
      "regex": "[{}()\\[\\];,\\.]"
    }
  }
}