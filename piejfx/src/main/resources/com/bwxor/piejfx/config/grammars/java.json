{
  "extensions": [".java"],
  "rules": {
    "keywords": {
      "type": "keyword",
      "regex": "\\b(abstract|assert|boolean|break|byte|case|catch|char|class|const|continue|default|do|double|else|enum|extends|final|finally|float|for|goto|if|implements|import|instanceof|int|interface|long|native|new|package|private|protected|public|return|short|static|strictfp|super|switch|synchronized|this|throw|throws|transient|try|void|volatile|while)\\b"
    },
    "types": {
      "type": "type",
      "regex": "\\b(byte|short|int|long|float|double|boolean|char|void|String|Object)\\b"
    },
    "strings": {
      "type": "string",
      "regex": "\"(\\\\.|[^\"\\\\])*\""
    },
    "character": {
      "type": "char",
      "regex": "'(\\\\.|[^'\\\\])'"
    },
    "single_line_comment": {
      "type": "comment",
      "regex": "//.*"
    },
    "multi_line_comment": {
      "type": "comment",
      "regex": "/\\*[\\s\\S]*?\\*/"
    },
    "numbers": {
      "type": "number",
      "regex": "\\b(0x[0-9a-fA-F]+|\\d+\\.\\d+f?|\\d+f?|\\d+L?)\\b"
    },
    "annotations": {
      "type": "annotation",
      "regex": "@[A-Za-z_][A-Za-z0-9_]*"
    },
    "imports": {
      "type": "import",
      "regex": "^\\s*import\\s+(static\\s+)?[A-Za-z_][A-Za-z0-9_\\.]*\\s*;"
    },
    "package": {
      "type": "package",
      "regex": "^\\s*package\\s+[A-Za-z_][A-Za-z0-9_\\.]*\\s*;"
    },
    "operators": {
      "type": "operator",
      "regex": "\\+\\+|--|==|!=|<=|>=|&&|\\|\\||<<|>>>|>>|[-+*/%=&|^~<>!]"
    },
    "punctuation": {
      "type": "punctuation",
      "regex": "[{}()\\[\\];,\\.]"
    },
    "class_name": {
      "type": "class",
      "regex": "\\bclass\\s+[A-Za-z_][A-Za-z0-9_]*"
    },
    "function": {
      "type": "function",
      "regex": "\\b[A-Za-z_][A-Za-z0-9_]*\\s*(?=\\()"
    },
    "identifiers": {
      "type": "identifier",
      "regex": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
    }
  }
}
