{
  "extensions": [
    ".kt",
    ".kts"
  ],
  "rules": [
    {
      "type": "comment",
      "regex": "//.*|/\\*[\\s\\S]*?\\*/"
    },
    {
      "type": "string",
      "regex": "\"(\\\\.|[^\"\\\\])*\""
    },
    {
      "type": "number",
      "regex": "\\b\\d+(\\.\\d+)?\\b"
    },
    {
      "type": "keyword",
      "regex": "\\b(abstract|actual|annotation|as|break|by|catch|class|companion|const|constructor|continue|crossinline|data|do|else|enum|expect|external|false|final|for|fun|if|in|interface|internal|is|it|lateinit|noinline|null|object|open|operator|out|override|package|private|protected|public|return|sealed|super|suspend|this|throw|true|try|typealias|val|var|when|where|while)\\b"
    },
    {
      "type": "class",
      "regex": "(?<=\\bclass\\s+)[A-Za-z_][A-Za-z0-9_]*"
    },
    {
      "type": "function",
      "regex": "(?<=\\bfun\\s+)[A-Za-z_][A-Za-z0-9_]*"
    },
    {
      "type": "operator",
      "regex": "==|!=|<=|>=|&&|\\|\\||\\??\\.|\\?\\?|->|[-+*/%=&|^~<>!]"
    },
    {
      "type": "punctuation",
      "regex": "[{}()\\[\\];,\\.:]"
    },
    {
      "type": "indent",
      "regex": "^\\s+"
    },
    {
      "type": "identifier",
      "regex": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
    }
  ]
}