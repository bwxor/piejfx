{
  "extensions": [
    ".md"
  ],
  "rules": [
    {
      "type": "code",
      "regex": "`[^`]+`"
    },
    {
      "type": "link",
      "regex": "\\[[^\\]]+\\]\\([^)]+\\)"
    },
    {
      "type": "header",
      "regex": "^#{1,6}\\s+.*"
    },
    {
      "type": "bold",
      "regex": "\\*\\*[^*]+\\*\\*"
    },
    {
      "type": "italic",
      "regex": "\\*[^*]+\\*"
    },
    {
      "type": "list",
      "regex": "^\\s*[-*+]\\s+.*|^\\s*\\d+\\.\\s+.*"
    },
    {
      "type": "blockquote",
      "regex": "^>\\s+.*"
    },
    {
      "type": "text",
      "regex": ".+"
    }
  ]
}